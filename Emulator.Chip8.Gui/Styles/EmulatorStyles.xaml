<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="Font.Consolas">pack://application:,,,/Fonts/#Consolas</FontFamily>

    <Style x:Key="Style.Emulator.Window" TargetType="{x:Type Window}">
        <Setter Property="Background" Value="Indigo" />
    </Style>

    <Style x:Key="Style.Emulator.TextBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource Font.Consolas}" />
        <Setter Property="Foreground" Value="LimeGreen" />
    </Style>

</ResourceDictionary>