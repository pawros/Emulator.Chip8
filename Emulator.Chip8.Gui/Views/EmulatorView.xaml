<Window x:Class="Emulator.Chip8.Gui.Views.EmulatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Emulator.Chip8.Gui.ViewModels"
        mc:Ignorable="d"
        Title="Emulator"
        d:DataContext="{d:DesignInstance viewModels:EmulatorViewModel}"
        Height="450"
        Width="800"
        Style="{DynamicResource Style.Emulator.Window}"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="640" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="320" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <WindowsFormsHost x:Name="Host"
                          Grid.Column="0"
                          Grid.Row="0"
                          />

        <ItemsControl Grid.Column="0" 
                      Grid.Row="1"
                      ItemsSource="{Binding Memory}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel ItemWidth="20" Width="80" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"  Style="{DynamicResource Style.Emulator.TextBlock}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock Grid.Column="1"
                   Grid.Row="0"
                   Text="{Binding Opcode}"
                   Style="{DynamicResource Style.Emulator.TextBlock}"
                   />



    </Grid>
</Window>
