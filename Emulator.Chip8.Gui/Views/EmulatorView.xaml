<Window x:Class="Emulator.Chip8.Gui.Views.EmulatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Emulator"
        d:DataContext="{d:DesignInstance viewModels:EmulatorViewModel}"
        Height="450"
        Width="800"
        xmlns:local="clr-namespace:Emulator.Chip8.Gui.Views"
        xmlns:viewModels="clr-namespace:Emulator.Chip8.Gui.ViewModels"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="640" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="320" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <WindowsFormsHost x:Name="Host"
                          Grid.Column="0"
                          Grid.Row="0"
                          />

    </Grid>
</Window>
